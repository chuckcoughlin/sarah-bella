<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragmentDiscoveryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0"
            android:gravity="center"
            android:textAppearance="@style/TabTitle" />
        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/android:list"
            android:choiceMode="singleChoice"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:dividerHeight="5dp"
            android:divider="#000000"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true">
        <!-- change button color by setting android:backgroundTint -->
        <Button android:id="@+id/addButton"
            android:text="@string/discoveryButtonAdd"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_vertical|center"/>
        <Button android:id="@+id/clearButton"
            android:text="@string/discoveryButtonClear"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_vertical|center"/>
        <Button android:id="@+id/scanButton"
            android:text="@string/discoveryButtonScan"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center_vertical|center"/>
    </LinearLayout>

</LinearLayout>
