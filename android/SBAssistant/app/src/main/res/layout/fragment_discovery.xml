<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragmentDiscoveryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_weight="0"
            android:gravity="center"
            android:textAppearance="@style/TabTitle" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="60dp">

            <ImageView
                android:id="@+id/robot_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:src="@drawable/turtlebot" />
            <ImageView
                android:id="@+id/error_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:adjustViewBounds="true"
                android:src="@drawable/error_triangle" />
            <ProgressBar
                android:id="@+id/progress_circle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:paddingLeft="40dp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/robot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/master_uri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="20sp"  />

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/android:list"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:choiceMode="singleChoice"
                android:divider="#000000"
                android:dividerHeight="5dp"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:gravity="center|bottom"
            android:orientation="horizontal">
            <!-- change button color by setting android:backgroundTint -->
            <Button
                android:id="@+id/defineButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/rounded_button"
                android:text="@string/discoveryButtonDefine" />

            <Button
                android:id="@+id/clearButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/rounded_button"
                android:text="@string/discoveryButtonClear" />

            <Button
                android:id="@+id/validateButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/rounded_button"
                android:text="@string/discoveryButtonValidate" />

            <ToggleButton
                android:id="@+id/startButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center"
                android:background="@drawable/rounded_button"
                android:textOff="@string/discoveryButtonStop"
                android:textOn="@string/discoveryButtonStart" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>