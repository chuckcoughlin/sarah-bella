<?xml version="1.0" encoding="utf-8"?>
<!-- The current application -->
<ros.android.views.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/checkable"
    >
    <TextView android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/application_name"
        android:layout_gravity="left"
        android:textSize="24sp"
        android:textColor="@color/maroon"/>
    <TextView android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:id="@+id/application_description"
        android:textSize="20sp"
        android:paddingLeft="20dp"/>
    <TextView android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#A0A0A0"
        android:textStyle="italic"
        android:textSize="20sp"
        android:id="@+id/application_status"
        android:paddingLeft="20dp"/>
</ros.android.views.CheckableLinearLayout>

