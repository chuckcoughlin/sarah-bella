<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chuckcoughlin.sb.assistant.tab.TeleopFragment"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">
    <TextView
        android:id="@+id/fragmentAudioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TabTitle" />
    <org.ros.android.view.AudioCompassView
        android:id="@+id/audio_compass"
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:layout_below="@+id/fragmentTeleopsText"
        android:layout_weight="8"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"/>
</RelativeLayout>
