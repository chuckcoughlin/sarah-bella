<?xml version="1.0" encoding="utf-8"?>
<!-- Use this for the toggle buttons on the Discovery panel -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected -->
    <item android:drawable="@drawable/ball_green"
        android:state_checked="true" />
    <!-- When not selected -->
    <item android:drawable="@drawable/ball_yellow"
        android:state_checked="false"/>
    <!-- When disabled -->
    <item android:drawable="@drawable/ball_gray"
        android:state_enabled="true"/>
</selector>
