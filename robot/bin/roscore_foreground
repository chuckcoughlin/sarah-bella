#!/bin/sh
# Launch roscore in the foreground. Use a different terminal to 
# test commands such as:
#  rosparam list
#  rostopic list
# --- and others
# run as super-user
. /opt/ros/kinetic/setup.sh
export HOME=/home/chuckc
export ROS_ROOT=/opt/ros/kinetic/share/ros
export ROS_MASTER_URI="http://${IP}:11311"
export ROS_ETC_DIR=/opt/ros/kinetic/etc/ros
# Configure directories for either virtual machine or Raspberry Pi
if -d $HOME/catkin_ws
then
 export CATKIN=$HOME/catkin_ws
else
 export CATKIN=$HOME/robotics/catkin_ws
fi
set -x
export ROS_PACKAGE_PATH=${CATKIN}/src:/opt/ros/kinetic/share
export PYTHONPATH=${CATKIN}/devel/lib/python2.7/dist-packages:/opt/ros/kinetic/lib/python2.7/dist-packages

. $CATKIN/config/launch.conf

roslaunch ${LAUNCH_PKG} ${LAUNCH_FILE}
